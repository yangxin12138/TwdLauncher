<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_time"
            android:text="13:16"
            android:textColor="@color/white"
            android:textSize="@dimen/tvTime_textSize"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/tv_day"
            android:text="2023年12月11日"
            android:textColor="@color/white"
            android:textSize="@dimen/tvDay_textSize"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"/>
        <ImageView
            android:id="@+id/empty"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/im_usb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_usb"
            android:padding="15dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/im_headset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_headset"
            android:padding="15dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/im_wifi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_wifi"
            android:padding="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="6"
        android:padding="80dp">
        
        <ImageView
            android:id="@+id/im_cast"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_cast"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/border_black"/>
        <ImageView
            android:id="@+id/im_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_file"
            android:scaleType="fitXY"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:id="@+id/im_hdmi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_hdmi"
            android:scaleType="fitXY"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:id="@+id/im_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_setting"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

  </LinearLayout>