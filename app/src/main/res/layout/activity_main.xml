<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/leftLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/leftLayout_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightLayout"
        app:layout_constraintHorizontal_weight="1">

      <TextView
          android:id="@+id/tv_time"
          android:text=""
          android:textColor="@color/white"
          android:textSize="@dimen/tvTime_textSize"
          android:gravity="center_horizontal"
          android:layout_width="match_parent"
          android:layout_height="@dimen/tvTime_height"/>
      <TextView
          android:id="@+id/tv_day"
          android:text=""
          android:textColor="@color/white"
          android:textSize="@dimen/tvDay_textSize"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="@dimen/tvDay_height"
          android:layout_below="@+id/tv_time"/>
        <ImageView
            android:id="@+id/im_usb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_day"/>
      <ImageButton
          android:id="@+id/imButton_hdmi"
          android:layout_width="@dimen/btHdmi_width_height"
          android:layout_height="@dimen/btHdmi_width_height"
          android:layout_below="@+id/im_usb"
          android:src="@drawable/im_hdmi"
          android:background="@android:color/transparent"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/btHdmi_marginTop"
          android:scaleType="fitXY"/>
      <ImageButton
          android:id="@+id/imButton_setting"
          android:layout_width="@dimen/btSetting_width_height"
          android:layout_height="@dimen/btSetting_width_height"
          android:layout_below="@+id/imButton_hdmi"
          android:background="@android:color/transparent"
          android:src="@drawable/im_settings"
          android:layout_centerHorizontal="true"
          android:scaleType="fitXY"
          android:layout_marginTop="@dimen/btSetting_marginTop"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/rightLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/leftLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient">

            <ImageButton
                android:id="@+id/imButton_androidcast"
                android:layout_width="@dimen/btAndroidCast_width"
                android:layout_height="@dimen/btAndroidCast_height"
                android:layout_marginStart="@dimen/btAndroidCast_marginStart"
                android:layout_marginTop="@dimen/btAndroidCast_marginTop"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/im_androidcast"
                />

            <ImageButton
                android:id="@+id/imButton_airdrop"
                android:layout_width="@dimen/btAirplay_width"
                android:layout_height="@dimen/btAirplay_height"
                android:layout_marginStart="@dimen/btAirplay_marginStart"
                android:layout_marginTop="@dimen/btAirplay_marginTop"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/imButton_androidcast"
                android:background="@android:color/transparent"
                android:src="@drawable/im_airplay"/>
            <ImageButton
                android:id="@+id/imButton_video"
                android:layout_width="@dimen/btVideo_width"
                android:layout_height="@dimen/btVideo_height"
                android:layout_marginStart="@dimen/btVideo_marginStart"
                android:layout_below="@+id/imButton_androidcast"
                android:background="@android:color/transparent"
                android:src="@drawable/im_video"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/btVideo_marginTop"/>
            <ImageButton
                android:id="@+id/imButton_music"
                android:layout_width="@dimen/btMusic_width"
                android:layout_height="@dimen/btMusic_height"
                android:layout_marginStart="@dimen/btMusic_marginStart"
                android:layout_below="@+id/imButton_video"
                android:background="@android:color/transparent"
                android:src="@drawable/im_music"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/btMusic_marginTop"/>
            <ImageButton
                android:id="@+id/imButton_pic"
                android:layout_width="@dimen/btPic_width"
                android:layout_height="@dimen/btPic_height"
                android:layout_marginStart="@dimen/btPic_marginStart"
                android:scaleType="fitXY"
                android:layout_below="@+id/imButton_airdrop"
                android:layout_toEndOf="@+id/imButton_video"
                android:background="@android:color/transparent"
                android:src="@drawable/im_picture"
                android:layout_marginTop="@dimen/btPic_marginTop"/>
            <ImageButton
                android:id="@+id/imButton_office"
                android:layout_width="@dimen/btOffice_width"
                android:layout_height="@dimen/btOffice_height"
                android:layout_marginStart="@dimen/btOffice_marginStart"
                android:layout_below="@+id/imButton_pic"
                android:layout_toEndOf="@+id/imButton_video"
                android:background="@android:color/transparent"
                android:src="@drawable/im_wps"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/btOffice_marginTop"/>
            <ImageButton
                android:id="@+id/im_dlan"
                android:layout_width="@dimen/btDlan_width"
                android:layout_height="@dimen/btDlan_height"
                android:layout_marginStart="@dimen/btDlan_marginStart"
                android:layout_marginTop="@dimen/btDlan_marginTop"
                android:background="@android:color/transparent"
                android:src="@drawable/im_dlan"
                android:scaleType="fitXY"
                android:layout_below="@+id/imButton_music"
                android:layout_marginBottom="@dimen/btDlan_marginBottom"/>
            <ImageButton
                android:id="@+id/im_wired"
                android:layout_width="@dimen/btWired_width"
                android:layout_height="@dimen/btWired_height"
                android:layout_marginStart="@dimen/btWired_marginStart"
                android:layout_marginTop="@dimen/btWired_marginTop"
                android:background="@android:color/transparent"
                android:src="@drawable/im_wired"
                android:scaleType="fitXY"
                android:layout_below="@+id/imButton_office"
                android:layout_toEndOf="@+id/im_dlan"
                android:layout_marginBottom="@dimen/btWired_marginBottom"/>
        </RelativeLayout>

    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>